+			schema.NewField("StateRoot", schema.B32()),
+			schema.NewField("ReceiptsRoot", schema.B32()),
+			schema.NewField("LogsBloom", schema.B256()),
+			schema.NewField("Random", schema.U64()),
+			schema.NewField("Number", schema.U64()),
