+func TestBytes96MarshalText(t *testing.T) {
+	tests := []struct {
+		name string
+		h    bytes.B96
+		want string
+	}{
+		{
+			name: "valid bytes",
+			h: func() bytes.B96 {
+				var b bytes.B96
+				for i := range b {
+					b[i] = 0x01
+				}
+				return b
+			}(),
+			want: "0x" + strings.Repeat("01", 96),
+		},
+		{
+			name: "empty bytes",
+			h:    bytes.B96{},
+			want: "0x" + strings.Repeat("00", 96),
+		},
+		{
+			name: "mixed bytes",
+			h: func() bytes.B96 {
+				var b bytes.B96
+				for i := 0; i < len(b); i++ {
+					b[i] = byte(i % 256)
+				}
+				return b
+			}(),
+			want: "0x" + func() string {
+				var s string
+				for i := range 96 {
+					s += fmt.Sprintf("%02x", i%256)
+				}
+				return s
+			}(),
+		},
+	}
+
+	for _, tt := range tests {
+		t.Run(tt.name, func(t *testing.T) {
+			got, err := tt.h.MarshalText()
+			require.NoError(t, err)
+			require.Equal(t, tt.want, string(got))
+		})
+	}
+}
+
